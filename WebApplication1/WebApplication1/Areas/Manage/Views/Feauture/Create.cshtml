@model Feauture
<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Default form</h4>
                <p class="card-description">
                    Basic form layout
                </p>
                <form method="post" enctype="multipart/form-data" class="forms-sample">
                    <div class="form-group">
                        <label asp-for="Name">Name</label>
                        <input asp-for="Name" class="form-control"  placeholder="Name">
                        <span asp-validation-for="Name" class="color:red"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ImageFile">ImageFile</label>
                        <input asp-for="ImageFile" class="form-control" placeholder="ImageFile">
                        <span asp-validation-for="ImageFile" class="color:red"></span>
                    </div>
                    
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a asp-action="Index" asp-controller="Feauture"  class="btn btn-light">Cancel</A>
                </form>
            </div>
        </div>
    </div>
</div>
